<% include ../partials/header %>

<h2 class="strokeme text-center">Post a Beach</h2>
<div class="container">
    <div class="row">
        <div class="col-12 d-flex justify-content-center">
            <form action="/beaches" method="POST" class="d-flex flex-column">
                <input style="width: 25vw;" class="d-block text-center" type="text" placeholder="Enter the name of the beach" name="beach[name]">
                <input style="width: 25vw;" class="d-block text-center" type="text" placeholder="Enter an image addess" name="beach[image]">
                <textarea name="beach[content]" class="text-center" placeholder="Enter something about this spot!"></textarea>
                <button type="submit" class="btn btn-primary ">Submit</button>
            </form>
        </div>
    </div>
</div>

