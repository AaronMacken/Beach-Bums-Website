<% include ../partials/header %>

<!-- Title -->
<div class="container">
  <div class="row">
    <div class="col-12 d-flex justify-content-center">
      <h2 class="strokeme"><%= beach.name %></h2>
    </div>
  </div>

  <!-- Image -->
  <div class="row">
    <div class="col-12 d-flex justify-content-center">
      <img src="<%= beach.image %>" alt="" />
    </div>
  </div>

  <!-- Beach post content -->
  <div class="row">
    <div class="col-12 d-flex justify-content-center">
      <h3 class="strokeme my-2"><%= beach.content %></h3>
    </div>
  </div>

  <!-- Beach post comments -->
  <div class="row">
    <div class="col-12 d-flex justify-content-center">
      <% beach.comments.forEach((comment) => { %>
        <h5 class="strokeme"><%= comment.author %> said <%= comment.text %></h5>
      <% }) %>
    </div>
  </div>

  <!-- Control buttons -->
  <a href="/beaches" class="btn btn-outline-primary d-inline-flex">Go Back</a>
  <a href="/beaches/<%= beach._id %>/edit" class="btn btn-outline-warning">
    Edit Post</a>
    <a class="btn btn-outline-success" href="/beaches/<%=beach._id%>/comments/new">Leave a comment</a>
  <form
    action="/beaches/<%= beach._id %>?_method=DELETE"
    method="POST">
    <button class="btn btn-outline-danger">Delete Post</button>
  </form>
</div>

<% include ../partials/footer %>
